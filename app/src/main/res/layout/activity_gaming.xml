<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gamewall"
    android:orientation="vertical"
    tools:context=".gaming">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unleash Your Inner\nGenius"
            android:textColor="#141313"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/pfont" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/b_back"
            android:scaleType="fitCenter" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What would like to play today?"
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:textColor="#333333" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:src="@drawable/game1"
                    android:scaleType="centerCrop"
                    android:contentDescription="Memory Challenge" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Memory Challenge"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#563D56"
                    android:gravity="center"
                    android:paddingTop="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:src="@drawable/game2"
                    android:scaleType="centerCrop"
                    android:contentDescription="Puzzle Game" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Puzzle Game"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#563D56"
                    android:gravity="center"
                    android:paddingTop="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:src="@drawable/game3"
                    android:scaleType="centerCrop"
                    android:contentDescription="Space Explorer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Space Explorer"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#563D56"
                    android:gravity="center"
                    android:paddingTop="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:src="@drawable/game4"
                    android:scaleType="centerCrop"
                    android:contentDescription="Animal Kingdom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Animal Kingdom"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#563D56"
                    android:gravity="center"
                    android:paddingTop="5dp" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gaming Facts"
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:textColor="#333333" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Did you know? Playing video games can improve your problem-solving skills, reflexes, and creativity!"
        android:textSize="18sp"
        android:padding="12dp"
        android:textStyle="bold"
        android:textColor="#555555"
        android:background="#fff5e5"
        android:layout_marginBottom="10dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/card_buttton_bg" />

        <TextView
            android:id="@+id/cardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/pfont"
            android:letterSpacing="0.035"
            android:text="Upcoming Games"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/c1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardBackgroundColor="#A5D7EF"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="25dp">

                <ImageView
                    android:id="@+id/i1"
                    android:layout_width="65dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ql" />

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@+id/i1"
                    android:letterSpacing="0.03"
                    android:text="Quest of Legends"
                    android:textColor="#305f72"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@+id/i1"
                    android:layout_below="@+id/t1"
                    android:layout_marginTop="2dp"
                    android:text="Dive into a\nmagical realm"
                    android:textStyle="bold"
                    android:textColor="#646262"
                    android:textSize="20sp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/play_button"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="310dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/c2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardBackgroundColor="#B6B4B4"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="25dp">

                <ImageView
                    android:id="@+id/i2"
                    android:layout_width="65dp"
                    android:layout_height="75dp"
                    android:src="@drawable/bb" />

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@+id/i2"
                    android:letterSpacing="0.03"
                    android:text="Brain Battle"
                    android:textColor="#305f72"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@+id/i2"
                    android:layout_below="@+id/t2"
                    android:layout_marginTop="2dp"
                    android:text="Use your Brain Power\nand win the world!"
                    android:textStyle="bold"
                    android:textColor="#305f72"
                    android:textSize="20sp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/play_button"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="310dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
    </LinearLayout>
    </ScrollView>