<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/artwall"
    tools:context=".arts">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- Header Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlock Your Creative Potential"
            android:textColor="#141313"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/pfont" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/b_back"
            android:scaleType="fitCenter" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Explore Creative Resources"
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:textColor="#333333" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="175dp"
                    android:src="@drawable/drawing"
                    android:scaleType="centerCrop"
                    android:contentDescription="Drawing" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drawing"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F1E1E"
                    android:gravity="center"
                    android:paddingTop="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="175dp"
                    android:src="@drawable/music"
                    android:scaleType="centerCrop"
                    android:contentDescription="Music" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Listen Podcasts"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F1E1E"
                    android:gravity="center"
                    android:paddingTop="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="175dp"
                    android:src="@drawable/dance"
                    android:scaleType="centerCrop"
                    android:contentDescription="Performing Arts" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Performing Arts"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F1E1E"
                    android:gravity="center"
                    android:paddingTop="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:src="@drawable/origimi"
                    android:scaleType="centerCrop"
                    android:contentDescription="Interactive Learning" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interactive Learning"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F1E1E"
                    android:gravity="center"
                    android:paddingTop="5dp" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Explore Video Tutorials"
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:textColor="#333333" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/thumbnail" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/tutorial1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Watch Tutorial"
        android:layout_gravity="center"
        android:backgroundTint="#FF7F7F"
        android:textColor="#FFFFFF"
        android:padding="8dp"
        android:textSize="16sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/thumbnail2" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/tutorial2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Watch Tutorial"
        android:layout_gravity="center"
        android:backgroundTint="#FF7F7F"
        android:textColor="#FFFFFF"
        android:padding="8dp"
        android:textSize="16sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <ImageView
            android:id="@+id/img3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/thumbnail3" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/tutorial3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Watch Tutorial"
        android:layout_gravity="center"
        android:backgroundTint="#FF7F7F"
        android:textColor="#FFFFFF"
        android:padding="8dp"
        android:textSize="16sp"/>


</LinearLayout>

</ScrollView>
